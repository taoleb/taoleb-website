---
import { getCollection } from 'astro:content';
import { render } from 'astro:content';

// 生成静态路径
export async function getStaticPaths() {
  // 从blog集合获取所有文章
  const posts = await getCollection('blog');
  
  return posts.map((post) => ({
    params: { id: post.data.id },
    props: { post }
  }));
}

// 获取页面数据
const { post } = Astro.props;

// 渲染文章内容
const { Content } = await render(post);

// 页面元数据
const title = post.data.title;
const description = post.body.substring(0, 200) + '...';
---

<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title} - 信息动态</title>
  <meta name="description" content={description}>
  
  <style>
    .info-detail-container {
      max-width: 800px;
      margin: 0 auto;
      padding: 2rem;
      background: #fff;
      border-radius: 1rem;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }
    
    .info-detail-header {
      margin-bottom: 2rem;
      padding-bottom: 1rem;
      border-bottom: 2px solid #f0f0f0;
    }
    
    .info-detail-title {
      font-size: 2rem;
      font-weight: 700;
      color: #333;
      margin-bottom: 1rem;
      line-height: 1.3;
    }
    
    .info-detail-meta {
      display: flex;
      align-items: center;
      gap: 1rem;
      margin-bottom: 1rem;
      font-size: 0.9rem;
      color: #666;
    }
    
    .info-detail-category {
      background: linear-gradient(118deg, #a32cc4, #b65fcf, #e39ff6);
      color: white;
      padding: 0.3rem 0.8rem;
      border-radius: 1rem;
      font-size: 0.8rem;
      font-weight: 600;
    }
    
    .info-detail-date {
      color: #999;
    }
    
    .info-detail-content {
      font-size: 1.1rem;
      line-height: 1.8;
      color: #333;
      margin-bottom: 2rem;
    }
    
    .info-detail-content h2 {
      font-size: 1.5rem;
      font-weight: 700;
      color: #333;
      margin: 2rem 0 1rem 0;
      padding-bottom: 0.5rem;
      border-bottom: 2px solid #f0f0f0;
    }
    
    .info-detail-content h2:first-child {
      margin-top: 0;
    }
    
    .info-detail-content p {
      margin-bottom: 1rem;
      text-align: justify;
    }
    
    .info-detail-tags {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
      margin-bottom: 2rem;
    }
    
    .info-detail-tag {
      background: #f5f5f5;
      color: #666;
      padding: 0.3rem 0.8rem;
      border-radius: 1rem;
      font-size: 0.8rem;
      text-decoration: none;
      transition: all 0.3s ease;
    }
    
    .info-detail-tag:hover {
      background: #e0e0e0;
      color: #333;
    }
    
    .info-detail-back {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      background: #007bff;
      color: white;
      padding: 0.8rem 1.5rem;
      border-radius: 0.5rem;
      text-decoration: none;
      font-weight: 600;
      transition: all 0.3s ease;
    }
    
    .info-detail-back:hover {
      background: #0056b3;
      transform: translateY(-2px);
    }
    
    .info-detail-cover {
      width: 100%;
      height: 300px;
      object-fit: cover;
      border-radius: 1rem;
      margin-bottom: 2rem;
    }
    
    @media (max-width: 768px) {
      .info-detail-container {
        padding: 1rem;
        margin: 1rem;
      }
      
      .info-detail-title {
        font-size: 1.5rem;
      }
      
      .info-detail-content {
        font-size: 1rem;
      }
    }
  </style>
</head>
<body>
  <div class="info-detail-container">
    <div class="info-detail-header">
      <h1 class="info-detail-title">{post.data.title}</h1>
      <div class="info-detail-meta">
        <span class="info-detail-category">{post.data.categories}</span>
        <span class="info-detail-date">{new Date(post.data.date).toLocaleDateString('zh-CN')}</span>
      </div>
    </div>
    
    {post.data.cover && (
      <img 
        src={post.data.cover}
        alt={post.data.title}
        class="info-detail-cover"
        loading="lazy"
        referrerpolicy="no-referrer"
        onerror="this.onerror=null;this.src='/assets/images/lazy-loading.webp'"
      />
    )}
    
    <div class="info-detail-content">
      <Content />
    </div>
    
    <div class="info-detail-tags">
      {post.data.tags.map((tag: string) => (
        <a href={`/tag/${tag}`} class="info-detail-tag">#{tag}</a>
      ))}
    </div>
    
    <a href="/" class="info-detail-back">
      ← 返回动态列表
    </a>
  </div>
</body>
</html>
